abstract class TetrisBrick {
    int[][] position;
    final int numSegments = 4;
    int colorNum;
    Color color;
    
    public TetrisBrick(int[][] pos, int colNum){
        pos = this.position;
        colNum = this.colorNum;
        
    }
    
    public void moveUp(int row){
        for(int i = 0; i < numSegments; i++){
            //position = position[i][row -1];
        }
    }
    
    public void moveDown(){}
    
    public void getColorNumber(){}
    
    public void initPosition(){}
   
}

class ElfBrick extends TetrisBrick
{
    int position[][];
    public ElfBrick(int[][] pos, int colNum) {
        super(pos, colNum);
        pos = this.position;
    }
    
    @Override
    public void initPosition(){}
    //position = position{[], [], [],[]};
}

